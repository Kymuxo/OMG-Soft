@model IEnumerable<WebApplication1.Models.Help>

@{
    ViewBag.Title = "All";
}

<h2>ВАШИ ВОПРОСЫ</h2>


<table class="table">
    <tr>
        <th>
            Вопрос
        </th>
        <th>
            Ответ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        @*<td> @Html.TextBox("Question", null, new { @class = "form-control" })</td>
        < input class ="form-control" id ="Question" name ="Question" type ="text" value ="" />*@

    </tr>
}

</table>
